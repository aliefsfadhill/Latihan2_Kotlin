<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#626262"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Silahkan pilih kalkulasi yang diinginkan!"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginTop="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Konversi Suhu"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/btnSatu"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Program Belanja"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/btnDua"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menghitung Luas Permukaan Dan Volume"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/btnTiga"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Program Ganjil Genap"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/btnEmpat"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>
</LinearLayout>